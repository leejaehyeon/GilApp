<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.thegil.gilapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="org.thegil.gilapp.GilApplication"
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppBassTheme" >
        <activity
            android:name="org.thegil.gilapp.IntroUI"
            android:screenOrientation="portrait"
            android:theme="@style/AppNoActionTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.thegil.gilapp.LoginUI"
            android:theme="@style/AppNoActionTheme" >
        </activity>
        <activity android:name="org.thegil.gilapp.FirstCategoryUI" />
        <activity android:name="org.thegil.gilapp.BoardUI" />
        <activity android:name="org.thegil.gilapp.AboutUI" />
        <activity android:name="org.thegil.gilapp.ArticleListUI" />
        <activity
            android:name="org.thegil.gilapp.ArticleUI"
            android:label="@string/title_activity_article_ui" >
        </activity>
    </application>

</manifest>
